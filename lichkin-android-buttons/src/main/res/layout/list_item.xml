<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorTransparent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/topLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_list_item_top_line_height"
        android:background="@color/colorTransparent"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_list_item_height"
        android:background="@color/color_list_item_bg"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dimen_list_item_padding_LR"
        android:paddingEnd="@dimen/dimen_list_item_padding_LR"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/img"
            android:layout_width="@dimen/dimen_list_item_img_size"
            android:layout_height="@dimen/dimen_list_item_img_size"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dimen_list_item_margin_left"
            android:background="@drawable/ic_btn_blank"
            android:contentDescription="@drawable/ic_btn_blank" />

        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dimen_list_item_img_txt_gap"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="@string/btn_title_blank"
            android:textColor="@color/color_list_item_txt"
            android:textSize="@dimen/dimen_list_item_txt_size" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_list_item_bg">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_list_item_bottom_line_height"
            android:layout_marginLeft="@dimen/dimen_list_item_padding_LR"
            android:layout_marginRight="@dimen/dimen_list_item_padding_LR"
            android:background="@color/color_list_item_bottom_line" />

    </LinearLayout>

</LinearLayout>
