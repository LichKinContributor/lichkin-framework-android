<resources>

    <!-- border text -->
    <style name="border_text_out">
        <item name="android:background">@color/colorBorder</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">1px</item>
    </style>

    <style name="border_text_in">
        <item name="android:background">@color/colorBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="border_text_input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">start</item>
    </style>

    <!-- input -->
    <style name="input_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="input_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="input_input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="input_input_white" parent="input_input">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorHint">#AAAAAA</item>
        <item name="android:textCursorDrawable">@drawable/cursor_shape_white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:theme">@style/input_input_white_theme</item>
    </style>

    <style name="input_input_white_theme" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#AAAAAA</item>
        <item name="colorControlActivated">#FFFFFF</item>
    </style>

    <!-- button -->
    <style name="button_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="button_button">
        <item name="android:clickable">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorForeground</item>
        <item name="android:textColor">@color/colorBackground</item>
    </style>

    <style name="button_button_green" parent="button_button">
        <item name="android:background">#339977</item>
        <item name="android:textColor">@color/colorBackground</item>
    </style>

    <!-- form -->
    <style name="form_container_out">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorBackground</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="form_container_in">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="form_button_container" parent="@style/button_container">
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <!-- popup -->
    <style name="popupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_in</item>
        <item name="android:windowExitAnimation">@anim/pop_out</item>
    </style>

</resources>
