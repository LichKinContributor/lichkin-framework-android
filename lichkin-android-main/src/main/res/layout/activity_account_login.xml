<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/form_container_out"
    android:background="@color/colorPrimaryDark">

    <LinearLayout
        style="@style/input_container"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/btn_fast_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:gravity="end"
            android:text="@string/btn_title_fast_login"
            android:textColor="#AAAAAA"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout style="@style/input_container">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:gravity="center_vertical|start"
            android:text="@string/title_login"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        style="@style/form_container_in"
        android:layout_centerInParent="true">

        <LinearLayout style="@style/input_container">

            <EditText
                android:id="@+id/loginName"
                style="@style/input_input_white"
                android:digits="@string/digits_letter_number"
                android:hint="@string/hint_loginName_or_cellphone"
                android:inputType="textCapWords"
                android:maxLength="32"
                tools:ignore="Autofill" />

        </LinearLayout>

        <LinearLayout
            style="@style/input_container"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/pwd"
                style="@style/input_input_white"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:digits="@string/digits_letter_number_symbol"
                android:hint="@string/hint_pwd"
                android:inputType="textPassword"
                tools:ignore="Autofill" />

            <ImageView
                android:id="@+id/btn_pwd_switcher"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="@drawable/ic_btn_eye_closed"
                app:srcCompat="@drawable/ic_btn_eye_closed" />

        </LinearLayout>

        <LinearLayout
            style="@style/input_container"
            android:layout_height="50dp"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/btn_next"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/btn_next"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            style="@style/input_container"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical|center_horizontal">

            <com.wang.avi.AVLoadingIndicatorView
                android:id="@+id/loading"
                style="@style/AVLoadingIndicatorView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:indicatorColor="#FFFFFF"
                app:indicatorName="BallClipRotateIndicator" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        style="@style/form_button_container"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_service_agreement1"
                android:textColor="#AAAAAA"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/btn_service_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_service_agreement2"
                android:textColor="#DDDDDD"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_service_agreement3"
                android:textColor="#AAAAAA"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/btn_privacy_right_policy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_service_agreement4"
                android:textColor="#DDDDDD"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
