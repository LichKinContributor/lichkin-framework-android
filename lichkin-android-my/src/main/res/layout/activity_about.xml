<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <com.lichkin.framework.app.android.widget.Title
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_title_height"
        app:text="@string/activity_about__title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center">

        <ImageView
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:src="@drawable/ic_launcher_about"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/app_name"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center">

        <TextView
            android:id="@+id/tx_versions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp" />

    </LinearLayout>

    <com.lichkin.framework.app.android.widget.ListItem
        android:id="@+id/btn_versions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:firstItem="true"
        app:lastItem="true"
        app:text="@string/activity_about__btn_title_versions" />

    <com.lichkin.framework.app.android.widget.ListItem
        android:id="@+id/btn_service_agreement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:firstItem="true"
        app:text="@string/activity_about__btn_title_service_agreement" />

    <com.lichkin.framework.app.android.widget.ListItem
        android:id="@+id/btn_privacy_right_policy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:lastItem="true"
        app:text="@string/activity_about__btn_title_privacy_right_policy" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="30dp"
        android:gravity="bottom|center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_about__text_copyright1"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_about__text_copyright2"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_about__text_copyright3"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>
